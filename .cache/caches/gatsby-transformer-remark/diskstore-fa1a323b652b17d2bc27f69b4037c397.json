offset":1935},"end":{"line":29,"column":117,"offset":2051},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"Studying English -> For 1 hour","position":{"start":{"line":31,"column":1,"offset":2053},"end":{"line":31,"column":31,"offset":2083},"indent":[]}}],"position":{"start":{"line":31,"column":1,"offset":2053},"end":{"line":31,"column":31,"offset":2083},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"Exercise -> 30 minutes minimum","position":{"start":{"line":33,"column":1,"offset":2085},"end":{"line":33,"column":31,"offset":2115},"indent":[]}}],"position":{"start":{"line":33,"column":1,"offset":2085},"end":{"line":33,"column":31,"offset":2115},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"If you want to improve your routine, remember that in the beginning this process will be difficult, difficult things tends to make you give up. However, doing things that help us become better people every day causes you to grow in all aspects of your life.","position":{"start":{"line":35,"column":1,"offset":2117},"end":{"line":35,"column":258,"offset":2374},"indent":[]}}],"position":{"start":{"line":35,"column":1,"offset":2117},"end":{"line":35,"column":258,"offset":2374},"indent":[]}}],"position":{"start":{"line":1,"column":1,"offset":0},"end":{"line":36,"column":1,"offset":2375}}}}